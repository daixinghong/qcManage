/* pages/devices/device.wxss */

.line {
  background: #e4e4e4;
  height: 1px;
  width: 100%;
}

.case_container {
  border-bottom: 1px solid #e4e4e4;
  display: flex;
  flex-direction: row;
  height: 90rpx;
  width: 100%;
}

.local_server_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  height: 100%;
  border-right: 1px solid #e4e4e4;
  background: #f7f7f7;
}

.qc_check_terminal_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 2;
  height: 100%;
  background: #f7f7f7;
}

.container {
  display: flex;
  flex-direction: row;
}

.server_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  border-right: 1rpx solid #f7f7f7;
  border-bottom: 1rpx solid #f7f7f7;
}

.terminal_container {
  display: flex;
  flex-direction: row;
  flex: 2;
  border-bottom: 1rpx solid #f7f7f7;
}

.terminal_item_container {
  align-items: center;
  margin-left: 10rpx;
}

.server_image {
  height: 100rpx;
  width: 100rpx;
}

.terminal_image {
  height: 50rpx;
  width: 50rpx;
}

.server_name_text {
  color: #000;
  font-size: 20rpx;
}

.local_server_text {
  color: #000;
  font-size: 28rpx;
}

.no_query_server_container {
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
}

.no_query_server_image {
  height: 50rpx;
  width: 50rpx;
}

.no_query_server_text {
  font-size: 28rpx;
  margin-left: 40rpx;
}

.container1 {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.server_image1 {
  margin-left: 20rpx;
  height: 100rpx;
  width: 100rpx;
}

.terminal_image1 {
  margin-left: 20rpx;
  height: 50rpx;
  width: 50rpx;
}
